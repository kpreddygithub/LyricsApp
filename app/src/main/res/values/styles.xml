<resources>

    <!-- Base application theme. -->
    <style name="MainAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary_1000</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_1000</item>
        <item name="colorAccent">@color/colorAccent_1000</item>
        <item name="android:textColor">@color/background_material_dark</item>
    </style>

    <style name="MaterialAppTheme" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary_1000</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_1000</item>
        <item name="colorAccent">@color/colorAccent_1000</item>
        <item name="singleAccount">true</item>
        <item name="android:textColor">@color/background_material_dark</item>
        <item name="drawerType">@integer/DRAWERTYPE_NO_HEADER</item>
        <item name="drawerColor">@color/colorPrimaryDark_1000</item>
        <item name="uniqueToolbarColor">false</item>
        <item name="sectionStyle">@style/MaterialSectionTheme</item>
        <item name="subheaderStyle">@style/CustomSubheaderTheme</item>
        <item name="learningPattern">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="background">@color/white</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="background">@color/white</item>
        <item name="android:background">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
    </style>

    <style name="CustomSubheaderTheme">
        <item name="subheaderTitleColor">#FFF</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="PreferenceListHeader">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">#cccccc</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme.CustomPreferenceSetting" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:listSeparatorTextViewStyle">@style/PreferenceListHeader</item>
        <item name="colorPrimary">@color/colorPrimary_1000</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_1000</item>
    </style>

    <style name="AppTheme.Translucent" parent="AppTheme.Base">
        <item name="colorPrimary">@color/colorPrimary_1000</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_1000</item>
        <item name="colorAccent">@color/colorAccent_1000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_1000</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_1000</item>
        <item name="colorAccent">@color/colorAccent_1000</item>
    </style>

    <style name="MainAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MainAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MainAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
