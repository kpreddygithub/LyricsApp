<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/light_navy_blue"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="14dp"
            android:paddingLeft="@dimen/dimen_8"
            android:paddingRight="@dimen/dimen_8">

            <ImageView
                android:id="@+id/back_navigation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_back_white" />
        </LinearLayout>

        <TextView
            android:id="@+id/song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_toLeftOf="@+id/fav_menu_icon"
            android:layout_toRightOf="@+id/back_layout"
            android:singleLine="true"
            android:text="foobar"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:textColor="@color/primary_text_default_material_dark"
            android:textSize="20dp" />


        <ImageView
            android:id="@+id/share_menu_item"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="14dp"
            android:src="@android:drawable/ic_menu_share" />

        <ImageView
            android:id="@+id/fav_menu_icon"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="14dp"
            android:layout_toLeftOf="@+id/share_menu_item"
            android:src="@drawable/ic_fav" />

    </RelativeLayout>


    <!--
